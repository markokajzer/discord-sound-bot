{
  "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",

  "vcs": {
    "enabled": true,
    "clientKind": "git"
  },

  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "noForEach": "off"
      }
    }
  },
  "organizeImports": {
    "enabled": true
  },

  "javascript": {
    "formatter": {
      "trailingCommas": "es5"
    }
  },

  "overrides": [
    {
      "include": ["package.json"],
      "formatter": {
        "enabled": false
      }
    }
  ]
}
