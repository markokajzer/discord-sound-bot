{
  "name": "discord-soundbot",
  "version": "1.4.0-dev",
  "description": "A Soundboard for Discord",
  "main": "dist/src/Bot.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/markokajzer/discord-soundbot"
  },
  "keywords": [
    "discord",
    "bot",
    "soundboard",
    "voice",
    "sounds",
    "mp3",
    "nodejs",
    "typescript"
  ],
  "author": "Marko Kajzer",
  "license": "MIT",
  "dependencies": {
    "awilix": "^3.0.9",
    "discord.js": "^11.4.2",
    "i18n": "^0.8.3",
    "lowdb": "^1.0.0",
    "node-opus": "^0.3.0"
  },
  "optionalDependencies": {
    "erlpack": "discordapp/erlpack",
    "fluent-ffmpeg": "^2.1.2",
    "uws": "9.148.0",
    "ytdl-core": "^0.24.0",
    "zlib-sync": "^0.1.4"
  },
  "devDependencies": {
    "@types/fluent-ffmpeg": "^2.1.6",
    "@types/glob": "^5.0.35",
    "@types/i18n": "^0.8.3",
    "@types/lowdb": "^1.0.0",
    "@types/node": "^8.9.5",
    "replace-in-file": "^3.4.2",
    "tslint": "^5.9.1",
    "typescript": "^3.0.1"
  },
  "engines": {
    "node": "^8.0.0"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "compile": "tsc -p tsconfig.json",
    "build": "npm run compile",
    "lint": "tslint -p tsconfig.json",
    "postcompile": "node dist/lib/postbuild.js",
    "serve": "node dist/src/main.js",
    "start": "npm run build && npm run serve",
    "rebuild": "npm run clean && npm run build",
    "release": "npm run build && npm run lint"
  }
